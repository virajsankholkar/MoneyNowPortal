@model OmniDataManagement.OmniDataItemManager
@{
    ViewBag.Title = "My Rewards";
}
<ol class="breadcrumb mb-3">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 float-left">
        <h4 class="nav-header mt-0">NAVIGATION</h4>
        <ul class="navbar-nav nav-stacked">
            <li class="nav-item"><a class="nav-link" href="~/Home/Index"><i class="fas fa-fw fa-home"></i> Home</a> </li>
            <li class="nav-item"><a class="nav-link" href="~/AccountDetails/Index"><i class="fas fa-fw fa-building"></i> My Account</a> </li>
            <li class="nav-item"><a class="nav-link" href="~/Transactions/Index"><i class="fas fa-fw fa-street-view"></i> Transactions</a></li>
            <li class="nav-item"><a class="nav-link" href="~/CardDetails/Index"><i class="fas fa-fw fa-credit-card"></i> My Cards </a></li>
            <li class="nav-item"><a class="nav-link" href="~/Payments/Make"><i class="fas fa-shopping-cart"></i> Make Payments</a></li>
            <li class="nav-item active"><a class="nav-link" href="~/Rewards/Index"><i class="fas fa-fw fa-trophy"></i> My Rewards</a></li>
            <li class="nav-item"><a class="nav-link" href="~/Reporting/Index"><i class="fas fa-fw fa-chart-line"></i> Reporting</a></li>
        </ul>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12 float-left">
        <div class="panel panel-primary">
            <div class="panel-body">
                <h6 class="pl-3 pt-2">Individual Rewards</h6>
                <div class="table-responsive">
                    <table class="table points-table">
                        <tbody>
                            <tr>
                                <td>
                                        <div class="circle-bg"><i class="far fa-star"></i></div>
                                        Available Points
                                </td>
                                <td><strong>@ViewBag.TotalCardRewards</strong></td>
                                <td class="vertical-center">
                                    <button type="button" class="btn btn-primary disabled"> <i class="fas fa-trophy"></i>&nbsp;View Rewards Catalog</button>                                    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <h6 class="main-header mt-2"> Group Card Details</h6>
        </div>
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            @foreach (OmniDataManagement.CardDetails item in Model.CardDetailsList)
            {
               <div class="panel panel-primary">
                <div class="panel-heading" role="tab" id="heading@(item.CardID)">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse@(item.CardID)" aria-expanded="true" aria-controls="collapse@(item.CardID)">
                            <i class="more-less fas fa-angle-right"></i>
                            @item.CardName Rewards
                        </a>
                    </h4>
                </div>
                <div id="collapse@(item.CardID)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading@(item.CardID)">
                    <div class="panel-body">
                        <table class="table points-table">
                            <tbody>
                                <tr>
                                    <td>
                                            <div class="circle-bg"><i class="far fa-star"></i></div>
                                            Available Points
                                    </td>
                                    <td><strong>@item.totalCardPoints</strong></td>
                                    <td class="vertical-center">
                                        <button type="button" class="btn btn-primary disabled"> <i class="fas fa-trophy"></i>&nbsp;View Rewards Catalog</button>
                                        <button type="button" class="btn btn-primary disabled"><i class="fas fa-star"></i>&nbsp; Redeem Points</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
