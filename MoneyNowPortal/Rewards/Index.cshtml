                            <tbody>
                                <tr>
                                    <td>
                                            <div class="circle-bg"><i class="far fa-star"></i></div>
                                            Available Points
                                    </td>
                                    <td><strong>1200<strong></td>
                                    <td class="vertical-center">
                                        <button type="button" class="btn btn-primary"> <i class="fas fa-trophy"></i>&nbsp;View Rewards Catalog</button>
                                        <button type="button" class="btn btn-primary"><i class="fas fa-star"></i>&nbsp; Redeem Points</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading" role="tab" id="heading3">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse3" aria-expanded="true" aria-controls="collapse3">
                            <i class="more-less fas fa-angle-right"></i>
                            Card # 3 Rewards
                        </a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading2">
                    <div class="panel-body">
